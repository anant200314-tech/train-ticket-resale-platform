# ===== APPLICATION ENVIRONMENT =====
NODE_ENV=production
PORT=8000
APP_URL=https://your-domain.com

# ===== DATABASE CONFIGURATION =====
# For Railway: Use DATABASE_URL from Railway PostgreSQL service
# Format: postgresql://user:password@host:port/database
DB_URL=postgresql://postgres:password@localhost:5432/train_resale
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=train_resale

# ===== JWT & SECURITY =====
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10

# ===== EMAIL CONFIGURATION =====
# Gmail SMTP Settings
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# ===== PAYMENT GATEWAY (Razorpay) =====
# Get from: https://dashboard.razorpay.com/app/settings/api-keys
RAZORPAY_KEY_ID=rzp_test_xxxxx_for_testing
RAZORPAY_KEY_SECRET=xxxxx_for_testing
# Change to rzp_live_xxxxx for production

# ===== AWS S3 CONFIGURATION =====
# For file uploads (ticket images)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=train-resale-tickets
AWS_REGION=ap-south-1
AWS_S3_URL=https://train-resale-tickets.s3.ap-south-1.amazonaws.com

# ===== REDIS CACHE (Optional) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===== LOGGING =====
LOG_LEVEL=info

# ===== FILE UPLOAD =====
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ===== FRONTEND URL =====
FRONTEND_URL=https://your-frontend-domain.vercel.app

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
